# Example environment configuration file
# Copy this to .env and fill in your API keys

# Required: Alpha Vantage API (free tier available)
# Get your key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Optional: GNews API (free tier: 100 requests/day)
# Get your key at: https://gnews.io/
GNEWS_API_KEY=your_gnews_key_here

# Optional: News API (free tier: 1000 requests/day)
# Get your key at: https://newsapi.org/
NEWS_API_KEY=your_newsapi_key_here

# Optional: FRED API for economic indicators
# Get your key at: https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=your_fred_key_here

# Application Configuration
APP_NAME=MEWS
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# Data Configuration
DATA_DIR=./data
MODELS_DIR=./models
OUTPUTS_DIR=./outputs

# ML Model Configuration
ML_RANDOM_STATE=42
ML_TEST_SIZE=0.2
ML_CV_FOLDS=5
RISK_THRESHOLD=0.05

# API Rate Limiting
ALPHA_VANTAGE_CALLS_PER_MINUTE=5
NEWS_API_CALLS_PER_HOUR=1000

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
STREAMLIT_THEME_PRIMARY_COLOR=#FF6B6B
STREAMLIT_THEME_BACKGROUND_COLOR=#FFFFFF
STREAMLIT_THEME_SECONDARY_BACKGROUND_COLOR=#F0F2F6

# GPU Configuration (optional)
CUDA_VISIBLE_DEVICES=0
USE_GPU=auto  # auto, true, false

# Logging Configuration
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/mews.log
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5
